{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "generator-star-spacing": "off",
    "import/prefer-default-export": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["shared", "./shared"]
        ]
      }
    }
  }
}